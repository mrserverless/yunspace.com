doctype xml
rss(version="2.0" xmlns:atom="http://www.w3.org/2005/Atom")
  channel
    title= title
    link= url
    description= description
    atom:link(href="#{ url }/blog/atom.xml", rel="self", type="application/rss+xml")
    for post, slug in public.blog._data
      item
        title= post.title
        description <![CDATA[!{ partial(slug) }]]>
        pubDate= new Date(post.date)
        link #{ url }/blog/#{ post }
        guid(isPermaLink="true") #{ url }/blog/#{ post }
